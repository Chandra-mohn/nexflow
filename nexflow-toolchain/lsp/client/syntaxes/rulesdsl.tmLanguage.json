{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "RulesDSL",
  "scopeName": "source.rulesdsl",
  "fileTypes": ["rules"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#table" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.rulesdsl",
          "match": "//.*$"
        },
        {
          "name": "comment.block.rulesdsl",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.rulesdsl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.rulesdsl",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.rulesdsl",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.rulesdsl",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.money.rulesdsl",
          "match": "\\$[0-9,]+(\\.[0-9]{2})?"
        },
        {
          "name": "constant.numeric.percentage.rulesdsl",
          "match": "\\b[0-9]+(\\.[0-9]+)?%"
        },
        {
          "name": "constant.numeric.decimal.rulesdsl",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.rulesdsl",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.structure.rulesdsl",
          "match": "\\b(decision_table|rule|end|given|decide|return|execute)\\b"
        },
        {
          "name": "keyword.control.hit-policy.rulesdsl",
          "match": "\\b(hit_policy|first_match|single_hit|multi_hit)\\b"
        },
        {
          "name": "keyword.control.flow.rulesdsl",
          "match": "\\b(if|then|elseif|else|endif)\\b"
        },
        {
          "name": "keyword.operator.logical.rulesdsl",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "keyword.control.condition.rulesdsl",
          "match": "\\b(in|is|null|is_null|is_not_null|matches|contains|starts_with|ends_with|to)\\b"
        },
        {
          "name": "keyword.control.action.rulesdsl",
          "match": "\\b(lookup|emit|default|as_of)\\b"
        },
        {
          "name": "storage.type.primitive.rulesdsl",
          "match": "\\b(text|number|boolean|date|timestamp|money|percentage)\\b"
        },
        {
          "name": "keyword.other.metadata.rulesdsl",
          "match": "\\b(description|priority|yes|multi)\\b"
        },
        {
          "name": "constant.language.boolean.rulesdsl",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.rulesdsl",
          "match": "(>=|<=|!=|==|>|<|=)"
        },
        {
          "name": "keyword.operator.arithmetic.rulesdsl",
          "match": "[+\\-*/%]"
        },
        {
          "name": "punctuation.separator.colon.rulesdsl",
          "match": ":"
        },
        {
          "name": "punctuation.separator.comma.rulesdsl",
          "match": ","
        },
        {
          "name": "punctuation.accessor.dot.rulesdsl",
          "match": "\\."
        },
        {
          "name": "punctuation.bracket.square.rulesdsl",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.bracket.round.rulesdsl",
          "match": "[()]"
        }
      ]
    },
    "table": {
      "patterns": [
        {
          "name": "punctuation.separator.pipe.rulesdsl",
          "match": "\\|"
        },
        {
          "name": "punctuation.definition.table-separator.rulesdsl",
          "match": "={3,}"
        },
        {
          "name": "constant.language.wildcard.rulesdsl",
          "match": "(?<=\\|\\s*)\\*(?=\\s*\\|)"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "entity.name.function.decision-table.rulesdsl",
          "match": "(?<=decision_table\\s+)[a-z_][a-z0-9_]*"
        },
        {
          "name": "entity.name.function.rule.rulesdsl",
          "match": "(?<=rule\\s+)[a-z_][a-z0-9_]*"
        },
        {
          "name": "entity.name.type.custom.rulesdsl",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "variable.other.field.rulesdsl",
          "match": "\\b[a-z_][a-z0-9_]*(?=\\s*\\.)"
        },
        {
          "name": "entity.name.function.call.rulesdsl",
          "match": "\\b[a-z_][a-z0-9_]*(?=\\s*\\()"
        },
        {
          "name": "variable.other.rulesdsl",
          "match": "\\b[a-z_][a-z0-9_]*\\b"
        }
      ]
    }
  }
}
