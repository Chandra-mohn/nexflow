{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ProcDSL",
  "scopeName": "source.procdsl",
  "fileTypes": ["proc"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.procdsl",
          "match": "//.*$"
        },
        {
          "name": "comment.block.procdsl",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.procdsl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.procdsl",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.duration.procdsl",
          "match": "\\b[0-9]+[smhd]\\b"
        },
        {
          "name": "constant.numeric.float.procdsl",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.procdsl",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.structure.procdsl",
          "match": "\\b(process|end)\\b"
        },
        {
          "name": "keyword.control.input.procdsl",
          "match": "\\b(receive|from|schema|project|except)\\b"
        },
        {
          "name": "keyword.control.output.procdsl",
          "match": "\\b(emit|to|fanout|broadcast|round_robin)\\b"
        },
        {
          "name": "keyword.control.processing.procdsl",
          "match": "\\b(transform|enrich|route|aggregate|merge|using|on|select|where|call|with|async|lookup|default)\\b"
        },
        {
          "name": "keyword.control.execution.procdsl",
          "match": "\\b(parallelism|hint|partition|by|mode|stream|batch|micro_batch)\\b"
        },
        {
          "name": "keyword.control.time.procdsl",
          "match": "\\b(time|watermark|delay|late|data|allowed|lateness)\\b"
        },
        {
          "name": "keyword.control.window.procdsl",
          "match": "\\b(window|tumbling|sliding|session|gap|every)\\b"
        },
        {
          "name": "keyword.control.join.procdsl",
          "match": "\\b(join|within|type|inner|left|right|outer)\\b"
        },
        {
          "name": "keyword.control.correlation.procdsl",
          "match": "\\b(await|until|arrives|matching|timeout|hold|buffer|store|in|match|complete|when|count|marker|received|after)\\b"
        },
        {
          "name": "keyword.control.completion.procdsl",
          "match": "\\b(commit|failure|completion|correlation|include)\\b"
        },
        {
          "name": "keyword.control.state.procdsl",
          "match": "\\b(state|uses|local|keyed|counter|gauge|map|list|ttl|cleanup|on_checkpoint|on_access|background|fifo|lifo|priority)\\b"
        },
        {
          "name": "keyword.control.resilience.procdsl",
          "match": "\\b(error|dead_letter|skip|retry|checkpoint|strategy|block|drop|sample|alert)\\b"
        },
        {
          "name": "keyword.other.time-unit.procdsl",
          "match": "\\b(seconds?|minutes?|hours?|days?)\\b"
        },
        {
          "name": "keyword.operator.logical.procdsl",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "constant.language.boolean.procdsl",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.procdsl",
          "match": "\\b(null|none)\\b"
        },
        {
          "name": "storage.type.aggregate.procdsl",
          "match": "\\b(sum|avg|min|max|first|last|collect|count_distinct)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.procdsl",
          "match": "(>=|<=|!=|==|>|<)"
        },
        {
          "name": "keyword.operator.assignment.procdsl",
          "match": "="
        },
        {
          "name": "keyword.operator.arrow.procdsl",
          "match": "->"
        },
        {
          "name": "punctuation.separator.comma.procdsl",
          "match": ","
        },
        {
          "name": "punctuation.accessor.dot.procdsl",
          "match": "\\."
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "entity.name.function.process.procdsl",
          "match": "(?<=process\\s+)[a-z_][a-z0-9_]*"
        },
        {
          "name": "entity.name.type.schema.procdsl",
          "match": "(?<=schema\\s+)[a-z_][a-z0-9_]*"
        },
        {
          "name": "variable.other.field.procdsl",
          "match": "\\b[a-z_][a-z0-9_]*(?=\\s*\\.)"
        },
        {
          "name": "variable.other.procdsl",
          "match": "\\b[a-z_][a-z0-9_]*\\b"
        }
      ]
    }
  }
}
