// =============================================================================
// L12345-03: Development Configuration (L5)
// =============================================================================

config dev
    description "Development credit decisioning configuration"

    kafka:
        bootstrap_servers "localhost:9092"
        schema_registry "http://localhost:8081"

        topics:
            applications:
                name "dev.credit.applications"
                partitions 3
                replication 1

            approved:
                name "dev.credit.approved"
                partitions 3
                replication 1

            declined:
                name "dev.credit.declined"
                partitions 1
                replication 1

            review:
                name "dev.credit.manual-review"
                partitions 1
                replication 1
    end

    flink:
        parallelism 2
        checkpoint_interval 30 seconds
        state_backend "filesystem"
    end

    services:
        credit_bureau_service:
            url "http://localhost:8020"
            timeout 10 seconds
            mock true  // Use mock responses

        credit_model_service:
            url "http://localhost:8021"
            timeout 5 seconds

        customer_service:
            url "http://localhost:8022"
            timeout 3 seconds
    end

    // Relaxed thresholds for testing
    thresholds:
        min_credit_score 450
        max_dti 0.55
        max_delinquencies 5
    end

    logging:
        level "DEBUG"
    end
end
