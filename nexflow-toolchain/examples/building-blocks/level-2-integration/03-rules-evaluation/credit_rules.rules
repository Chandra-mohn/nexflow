// =============================================================================
// L12-03: Credit Decision Rules (L4)
// =============================================================================
// Decision table for credit application decisions
// =============================================================================

decision_table credit_decision_table
    description "Evaluate credit application"
    hit_policy first_match

    given:
        credit_score: number
        annual_income: money
        existing_debt: money
    end

    decide:
        | credit_score | annual_income | existing_debt  | decision    | max_limit   | rate      |
        |==============|===============|================|=============|=============|===========|
        | >= 750       | >= $100,000   | <= $50,000     | "approved"  | $100,000    | 5.5%      |
        | >= 750       | >= $75,000    | <= $30,000     | "approved"  | $75,000     | 6.0%      |
        | >= 700       | >= $75,000    | <= $25,000     | "approved"  | $50,000     | 7.0%      |
        | >= 700       | >= $50,000    | <= $20,000     | "approved"  | $30,000     | 8.0%      |
        | >= 650       | >= $50,000    | <= $15,000     | "review"    | $20,000     | 9.0%      |
        | >= 650       | *             | *              | "review"    | $10,000     | 10.0%     |
        | *            | *             | *              | "declined"  | $0          | 0%        |

    return:
        decision: text
        max_limit: money
        rate: percentage
end
