// =============================================================================
// L12-05: Development Configuration (L5)
// =============================================================================

environment dev
    description "Development environment"

    kafka:
        bootstrap_servers: "localhost:9092"
        consumer:
            group_id: "order-processor-dev"
            auto_offset_reset: "earliest"
        end
    end

    flink:
        parallelism: 1
        checkpoint:
            enabled: false
        end
    end

    topics:
        input: "orders-dev"
        output: "processed-orders-dev"
        errors: "order-errors-dev"
    end

    logging:
        level: "DEBUG"
    end
end
