// =============================================================================
// L12-05: Production Configuration (L5)
// =============================================================================

environment prod
    description "Production environment"

    kafka:
        bootstrap_servers: "${KAFKA_BROKERS}"
        consumer:
            group_id: "order-processor-prod"
            auto_offset_reset: "latest"
        end
        security:
            protocol: "SASL_SSL"
            sasl_mechanism: "PLAIN"
            sasl_username: "${KAFKA_USER}"
            sasl_password: "${KAFKA_PASSWORD}"
        end
    end

    flink:
        parallelism: 8
        checkpoint:
            enabled: true
            interval: 30000
            directory: "s3://nexflow-checkpoints/order-processor"
        end
    end

    topics:
        input: "orders-prod"
        output: "processed-orders-prod"
        errors: "order-errors-prod"
    end

    logging:
        level: "INFO"
        format: "json"
    end

    metrics:
        enabled: true
        port: 9090
    end
end
